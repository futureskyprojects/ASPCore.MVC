@page
@model ASPCoreMVC.Web.Pages.Manager.ExamCategories.ExamCategoriesIndexModel
@{
    Model.SetBreadcrumbBtn(L["Instructors manager"].Value,
        $"/manager/exam-categories/create",
        icon: "fas fa-user-tie",
        c: "btn-success");

    Model.SetBreadcrumb(
        new string[] { L["Manager"].Value, "javascript:$('#adminMenuDropdown').click();" },
        new string[] { L["Exam categories"].Value });
}

@section Styles {
}

@section Scripts {

}
<!-- Page Heading -->
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">@L["Exam categories"]</h6>
        <a href="/manager/exam-categories/create" class="float-md-right mt-2 m-md-0 btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white mr-1"></i> @L["Create new"]
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            @if (Model.ExamCategories.Count <= 0)
            {
                <div class="text-gray-600">@L["No exams have been created yet."]</div>
            }
            else
            {
                <table class="table tb table-bordered mb-4" width="100%" cellspacing="0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>@L["Exam Name"]</th>
                            <th>@L["Name"]</th>
                            <th class="no-sort text-center" width="200">@L["Action"]</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.ExamCategories)
                        {
                            <tr class="clickable-row" data-href="/manager/exam-categories/@item.Id/skill-categories">
                                <td class="align-middle">@item.Name</td>
                                <td class="align-middle">@item.Description</td>
                                <td class="text-center">
                                    <div class="row justify-content-around px-2">
                                        <div class="col-12 col-md-6 p-md-0 row justify-content-center">
                                            <a href="/manager/exam-categories/update/@item.Id"
                                               class="btn btn-warning btn-sm d-inline col-11 shadow-sm">
                                                <i class="fas fa-edit mr-1"></i> <span class="d-none d-sm-inline">@L["Edit"]</span>
                                            </a>
                                        </div>
                                        <div class="col-12 mt-2 mt-md-0 col-md-6 p-md-0 row justify-content-center">
                                            <button type="button"
                                                    onclick="loadExamTipsHelper(event,'@ASPCoreMVC.Common.HelperTipsTypes.Exam','@item.Id',false);"
                                                    class="btn btn-info btn-sm d-inline col-11 shadow-sm">
                                                <i class="fas fa-info-circle mr-1"></i> <span class="d-none d-sm-inline">@L["Detail"]</span>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>