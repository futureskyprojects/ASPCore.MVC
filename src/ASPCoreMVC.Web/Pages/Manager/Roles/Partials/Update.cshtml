@model Volo.Abp.Identity.IdentityRoleUpdateDto
@Html.AntiForgeryToken()
<div class="">
    <div class="form-group">
        <label asp-for="Name" class="mb-1"></label>
        @if (Model.Name.Equals("admin", StringComparison.OrdinalIgnoreCase))
        {
            <input asp-for="Name" type="hidden" id="role-name">
            <div class="form-control">@Model.Name</div>
        }
        else
        {
            <input asp-for="Name" class="form-control" id="role-name">
        }
        <div class="form-text text-danger small">
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <input type="hidden" asp-for="IsDefault" />
    <input type="hidden" asp-for="IsPublic" />
    <input type="hidden" asp-for="ConcurrencyStamp" />
    <input type="hidden" asp-for="ExtraProperties" />
