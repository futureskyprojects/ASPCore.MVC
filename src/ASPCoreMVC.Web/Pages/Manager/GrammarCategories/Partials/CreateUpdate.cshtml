@model ASPCoreMVC.TCUEnglish.GrammarCategories.GrammarCategoryDTO
@Html.AntiForgeryToken()
<div class="">
    @if (Model.Id != Guid.Empty)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-group">
        <label asp-for="Name" class="mb-1"></label>
        <input asp-for="Name" class="form-control">
        <div class="form-text text-danger small">
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="About" class="mb-1"></label>
        <textarea asp-for="About" class="form-control about-gc"></textarea>
        <div class="form-text text-danger small">
            <span asp-validation-for="About"></span>
        </div>
    </div>
</div>