@model ASPCoreMVC.Web.Pages.Dashboard.DashboardIndexModel
<!-- Content Row -->
<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            @L["Completed tests"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Html.Raw(Model.CompletedTests.ToString().WithCommas())
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary btn-circle">
                            <i class="fas fa-clipboard-check text-white"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            @L["Passed tests"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Html.Raw(Model.PassedTests.ToString().WithCommas())
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-success btn-circle">
                            <i class="fas fa-check text-white"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            @L["Failed tests"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Html.Raw(Model.FailedTests.ToString().WithCommas())
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-danger btn-circle">
                            <i class="fas fa-times text-white"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            @L["Your GPA"]
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-success">
                                    @Html.Raw(Model.UserGPA.ToString().WithCommas())
                                </div>
                            </div>
                            <div class="col">
                                <div class="progress progress-sm mr-2">
                                    <div class="progress-bar bg-info" role="progressbar"
                                         style="width: @Html.Raw($"{(int)Model.UserGPARate}%")" aria-valuenow="50" aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-info btn-circle">
                            <i class="fas fa-star text-white"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<!-- Content Row -->