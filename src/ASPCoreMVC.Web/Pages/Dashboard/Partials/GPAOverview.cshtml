<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">@L["GPA Overview"]</h6>
        <div class="dropdown no-arrow">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                 aria-labelledby="dropdownMenuLink">
                <div class="dropdown-header">@L["View by"]:</div>
                <a class="dropdown-item gpa-overview-changeable" data-type="week">@L["Week"]</a>
                <a class="dropdown-item gpa-overview-changeable" data-type="month">@L["Month"]</a>
                <a class="dropdown-item gpa-overview-changeable" data-type="year">@L["Year"]</a>
            </div>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <div class="chart-area" id="chartrender">
            <canvas id="gpa-overview-chart"></canvas>
        </div>
    </div>
</div>