@model List<ASPCoreMVC.TCUEnglish.ExamCategories.ExamCategoryBaseDTO>
@{

}
<!-- Modal -->
<div class="modal fade" id="csem-modal" tabindex="-1" role="dialog" aria-labelledby="csem-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info py-2">
                <h6 class="modal-title text-white" id="csem-modal-title">@L["Select exam for statistics"]</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var exc in Model)
                {
                    <form method="post">
                        <div class="rounded shadow-sm py-2 text-center my-2 text-white exam-statistic" data-dismiss="modal">
                            <input type="hidden" name="ExamCategoryId" value="@exc.Id" />
                            @Html.Raw(exc.Name)
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>