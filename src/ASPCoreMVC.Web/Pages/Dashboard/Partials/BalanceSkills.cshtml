@using ASPCoreMVC.TCUEnglish.ScoreLogs
@{
    var balanceSkills = (List<SkillCatScoresAvgDTO>)ViewData["BalanceSkills"];
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">@L["Balance skills"]</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        @{
            var classX = "";
        }
        @if (balanceSkills.Sum(x => x.ScoresRate) == 0F)
        {
            classX = "d-none";
            <div class="text-center text-info small py-3">@L["You have not taken any exam yet"]</div>
        }
        <div class="chart-pie pt-4 pb-2 @classX">
            <canvas id="balance-skill-pie-chart"></canvas>
        </div>
        <div class="mt-4 text-center small">
            @foreach (var bs in balanceSkills)
            {
                <span class="mr-2">
                    <i class="fas fa-circle" style="color: @bs.HexColor;"></i> @bs.Name
                </span>
            }
        </div>
    </div>
</div>