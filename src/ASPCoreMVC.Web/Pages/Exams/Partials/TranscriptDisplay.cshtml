<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header bg-gradient-primary">
            <h6 class="modal-title text-white">@ViewBag.Title</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body max-width-100 artical">
            @Html.Raw(ViewBag.Content)
        </div>
        <div class="modal-footer">
            <button type="button" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm ml-auto" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>